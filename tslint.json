{
  "extends": ["tslint:recommended", "tslint-config-prettier"],
  "rules": {
    "variable-name": {
      "options": ["ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case", "allow-snake-case"]
    },
    "no-empty-interface": false,
    "max-classes-per-file": [false, 1]
  }
}
